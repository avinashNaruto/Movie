<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:elevation="30dp"
    app:contentPadding="1dp"
    android:layout_height="wrap_content">

<RelativeLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/rl"
    android:background="@color/DarkGreyText"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:id="@+id/iv_top_rated_image"/>

    <TextView
        android:textColor="@color/White"
        android:layout_marginRight="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        android:id="@+id/tv_top_rated_text"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_top_rated_image"/>

    <ImageView
        android:id="@+id/iv_star"
        android:layout_toRightOf="@+id/iv_top_rated_image"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_star"
        android:layout_below="@+id/tv_top_rated_text"
        android:layout_width="32dp"
        android:layout_height="32dp" />

    <TextView
        android:textColor="@color/White"
        android:gravity="center_vertical"
        android:id="@+id/tv_rating"
        android:layout_toRightOf="@+id/iv_star"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_top_rated_text"
        android:layout_width="32dp"
        android:layout_height="32dp" />


</RelativeLayout>
</android.support.v7.widget.CardView>